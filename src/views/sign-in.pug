extends layout
include mixins/form-input
include mixins/block-btn

block head
  link(rel='stylesheet', href='/stylesheets/sign-in.css')

block main
  .l-vertical
    .container
      form.sign-in-form
        +form-input("email", "", false, false, "email-input")(
          name='email',
          type='text',
          placeholder='아이디 또는 이메일'
        )
        +form-input("password", "", false, false, "password-input")(
          name='password',
          type='password',
          placeholder='비밀번호'
        )
        +block-btn("로그인", true, "sign-in-btn")(type='submit')
    .container
      p.sign-up-link 혹시, 배달의민족이 처음이신가요?
        = ' '
        a(href='/sign-up') 회원가입

block script
  script(src='/javascripts/sign-in.js', type='module')
